@model TezProjesi.CustomModels.CategoryModels.YeniKategoriEklePage
@{
    ViewData["Title"] = "KategoriGuncelle";
    Layout = "~/Views/Shared/_Layout_admin.cshtml";
}
<script src="~/js/ckeditor/ckeditor.js"></script>
<section class="content">
    <div class="container-fluid">
        <div class="card card-default">
            <div class="card-header">
                <h3 class="card-title">Kategori Guncelle</h3>
            </div>

            <div class="card-body">
                @using (Html.BeginForm("KategoriGuncelleKaydet", "Admin", FormMethod.Post, new { @class = "", @enctype = "multipart/form-data" }))
                {
                    @Html.HiddenFor(m => m.CategoryCRUD.Id)
                    <div class="col-lg-12 col-md-12">
                        <div class="form-group">
                            <label for="title">Parent</label>
                            @Html.DropDownListFor(m => m.CategoryCRUD.Parentid, new SelectList(Model.CategoryList, "Id", "Title"), "Seçiniz..", new { @class = "form-control", @id = "questionDifficulty", @placeholder = "", })
                        </div>
                    </div>

                    <div class="col-lg-12 col-md-12">
                        <div class="form-group">
                            <label for="title">Başlık:</label>
                            @Html.TextBoxFor(c => c.CategoryCRUD.Title, null, new { @class = "form-control", @id = "title", @placeholder = "Başlık", @required = "true", @maxlenght = "50" })
                        </div>
                    </div>
                    <div class="col-lg-12 col-md-12">
                        <div class="form-group">
                            <label for="Keywords">Anahtar Kelime:</label>
                            @Html.TextBoxFor(c => c.CategoryCRUD.Keywords, null, new { @class = "form-control", @id = "keywords", @placeholder = "Anahtar Kelime", @required = "true", @maxlenght = "50" })
                        </div>
                    </div>
                    <div class="col-lg-12 col-md-12">
                        <div class="form-group">
                            <label for="Description">Açıklama:</label>
                            @Html.TextAreaFor(c => c.CategoryCRUD.Description, new { @class = "form-control", @id = "Description", @placeholder = "Açıklama", @required = "true", @maxlenght = "50" })
                        </div>
                    </div>
                    <div class="col-lg-12 col-md-12">
                        <div class="form-group">
                            <label for="Image">Resim:</label>
                            <input type="file" id="CategoryImage" name="CategoryImage" class="form-control">
                        </div>
                    </div>
                    <div class="col-md-2"><button type="submit" class="btn btn-success btn-block">Kaydet</button></div>
                }
            </div>
        </div>
    </div>

</section>
<script src="~/js/ckeditor/ckeditor.js"></script>

<script>
    CKEDITOR.replace("Description");
</script>

