@model TezProjesi.CustomModels.RandevuModels
@using TezProjesi.Resources
@{
    ViewData["Title"] = "Randevularım";
    Layout = "~/Views/Shared/_Layout_user.cshtml";
}
<script src="~/js/ckeditor/ckeditor.js"></script>

<section class="accomodation_area section_gap">
    @{ int i = 0;}
    <div class="container">
        <div class="section_title text-center">
            <h3 class="title_color"><span>@Resource.rezervasyonlarım</span></h3>
        </div>
        <div class="row mb-5">
            <div class="col-12">
                @foreach (var reservation in Model.Reservations)
                {
                    i++;
                    @using (Html.BeginForm("YorumKaydet", "User", FormMethod.Post, new { @class = "", @enctype = "multipart/form-data" }))
                    {

                        <input type="hidden" asp-for="hotelId" value="@reservation.HotelId" />
                        <input type="hidden" asp-for="roomId" value="@reservation.RoomId" />
                        <input type="hidden" asp-for="userId" value="@reservation.UserId" />
                        <div class="blog_left_sidebar">
                            <article class="row blog_item mt-5">
                                <div class="col-md-3 mt-5">
                                    <div class="blog_info text-right">
                                        <ul class="blog_meta list_style">
                                            <li><a href="#">@reservation.Room.Title<i class="lnr lnr-home"></i></a></li>
                                            <li><a href="#">@reservation.Total ₺</a></li>
                                            <li><a href="#">@reservation.Startdate.Value.ToShortDateString()<i class="lnr lnr-calendar-full"></i></a></li>
                                            <li><a href="#">@reservation.Enddate.Value.ToShortDateString()<i class="lnr lnr-calendar-full"></i></a></li>
                                        </ul>
                                    </div>
                                </div>
                                <div class="col-md-9 mt-5">
                                    <div class="blog_post">
                                        <img src="image/blog/main-blog/m-blog-1.jpg" alt="">
                                        <div class="blog_details">
                                            <h4>@reservation.Hotel.Title</h4>
                                            <div class="col-12 text-center">
                                                <img src="~/HotelImg/@reservation.Hotel.Image.FirstOrDefault().HotelImg" height="300" />
                                            </div>
                                            <div class="col-12" style="max-height:400px !important;">
                                                @if (reservation.Checkout == true)
                                                {
                                                    <div class="col-12 mt-3">
                                                        <label><strong>@Resource.genelpuan: </strong></label>
                                                        <div class="btn-group btn-group-toggle float-right" data-toggle="buttons">
                                                            <label class="btn btn-outline-primary" for="btnradio1">
                                                                <input asp-for="generalRate" type="radio" class="btn-check" id="btnradio1" autocomplete="off" value=1 required> 1
                                                            </label>
                                                            <label class="btn btn-outline-primary" for="btnradio2">
                                                                <input asp-for="generalRate" type="radio" class="btn-check" id="btnradio2" autocomplete="off" value=2 required>
                                                                2
                                                            </label>
                                                            <label class="btn btn-outline-primary" for="btnradio3">
                                                                <input asp-for="generalRate" type="radio" class="btn-check" id="btnradio3" autocomplete="off" value=3 required>
                                                                3
                                                            </label>
                                                            <label class="btn btn-outline-primary" for="btnradio4">
                                                                <input asp-for="generalRate" type="radio" class="btn-check" id="btnradio4" autocomplete="off" value=4 required>
                                                                4
                                                            </label>
                                                            <label class="btn btn-outline-primary" for="btnradio5">
                                                                <input asp-for="generalRate" type="radio" class="btn-check" id="btnradio5" autocomplete="off" value=5 required>
                                                                5
                                                            </label>
                                                        </div>
                                                    </div>
                                                    <div class="col-12 mt-3">
                                                        <label><strong>@Resource.servispuan : </strong> </label>
                                                        <div class="btn-group btn-group-toggle float-right" data-toggle="buttons">
                                                            <label class="btn btn-outline-primary" for="btnradio1">
                                                                <input asp-for="serviceRate" type="radio" class="btn-check" id="btnradio1" autocomplete="off" value=1 required> 1
                                                            </label>
                                                            <label class="btn btn-outline-primary" for="btnradio2">
                                                                <input asp-for="serviceRate" type="radio" class="btn-check" id="btnradio2" autocomplete="off" value=2 required>
                                                                2
                                                            </label>
                                                            <label class="btn btn-outline-primary" for="btnradio3">
                                                                <input asp-for="serviceRate" type="radio" class="btn-check" id="btnradio3" autocomplete="off" value=3 required>
                                                                3
                                                            </label>
                                                            <label class="btn btn-outline-primary" for="btnradio4">
                                                                <input asp-for="serviceRate" type="radio" class="btn-check" id="btnradio4" autocomplete="off" value=4 required>
                                                                4
                                                            </label>
                                                            <label class="btn btn-outline-primary" for="btnradio5">
                                                                <input asp-for="serviceRate" type="radio" class="btn-check" id="btnradio5" autocomplete="off" value=5 required>
                                                                5
                                                            </label>
                                                        </div>
                                                    </div>

                                                    <div class="col-12 mt-3">


                                                        <label><strong>@Resource.yemekpuan :</strong> </label>
                                                        <div class="btn-group btn-group-toggle float-right" data-toggle="buttons">
                                                            <label class="btn btn-outline-primary" for="btnradio1">
                                                                <input asp-for="foodRate" type="radio" class="btn-check" id="btnradio1" autocomplete="off" value=1 required> 1
                                                            </label>
                                                            <label class="btn btn-outline-primary" for="btnradio2">
                                                                <input asp-for="foodRate" type="radio" class="btn-check" id="btnradio2" autocomplete="off" value=2 required>
                                                                2
                                                            </label>
                                                            <label class="btn btn-outline-primary" for="btnradio3">
                                                                <input asp-for="foodRate" type="radio" class="btn-check" id="btnradio3" autocomplete="off" value=3 required>
                                                                3
                                                            </label>
                                                            <label class="btn btn-outline-primary" for="btnradio4">
                                                                <input asp-for="foodRate" type="radio" class="btn-check" id="btnradio4" autocomplete="off" value=4 required>
                                                                4
                                                            </label>
                                                            <label class="btn btn-outline-primary" for="btnradio5">
                                                                <input asp-for="foodRate" type="radio" class="btn-check" id="btnradio5" autocomplete="off" value=5 required>
                                                                5
                                                            </label>
                                                        </div>
                                                    </div>
                                                    <div class="col-12 mt-3">

                                                        <label><strong>@Resource.konumpuan :</strong> </label>
                                                        <div class="btn-group btn-group-toggle float-right" data-toggle="buttons">
                                                            <label class="btn btn-outline-primary" for="btnradio1">
                                                                <input asp-for="locationRate" type="radio" class="btn-check" id="btnradio1" autocomplete="off" value=1 required> 1
                                                            </label>
                                                            <label class="btn btn-outline-primary" for="btnradio2">
                                                                <input asp-for="locationRate" type="radio" class="btn-check" id="btnradio2" autocomplete="off" value=2 required>
                                                                2
                                                            </label>
                                                            <label class="btn btn-outline-primary" for="btnradio3">
                                                                <input asp-for="locationRate" type="radio" class="btn-check" id="btnradio3" autocomplete="off" value=3 required>
                                                                3
                                                            </label>
                                                            <label class="btn btn-outline-primary" for="btnradio4">
                                                                <input asp-for="locationRate" type="radio" class="btn-check" id="btnradio4" autocomplete="off" value=4 required>
                                                                4
                                                            </label>
                                                            <label class="btn btn-outline-primary" for="btnradio5">
                                                                <input asp-for="locationRate" type="radio" class="btn-check" id="btnradio5" autocomplete="off" value=5 required>
                                                                5
                                                            </label>
                                                        </div>
                                                    </div>
                                                    <div class="col-12 mt-3">

                                                        <label><strong>@Resource.fiyatpuan :</strong> </label>
                                                        <div class="btn-group btn-group-toggle float-right" data-toggle="buttons">
                                                            <label class="btn btn-outline-primary" for="btnradio1">
                                                                <input asp-for="pricePerformanceRate" type="radio" class="btn-check" id="btnradio1" autocomplete="off" value=1 required> 1
                                                            </label>
                                                            <label class="btn btn-outline-primary" for="btnradio2">
                                                                <input asp-for="pricePerformanceRate" type="radio" class="btn-check" id="btnradio2" autocomplete="off" value=2 required>
                                                                2
                                                            </label>
                                                            <label class="btn btn-outline-primary" for="btnradio3">
                                                                <input asp-for="pricePerformanceRate" type="radio" class="btn-check" id="btnradio3" autocomplete="off" value=3 required>
                                                                3
                                                            </label>
                                                            <label class="btn btn-outline-primary" for="btnradio4">
                                                                <input asp-for="pricePerformanceRate" type="radio" class="btn-check" id="btnradio4" autocomplete="off" value=4 required>
                                                                4
                                                            </label>
                                                            <label class="btn btn-outline-primary" for="btnradio5">
                                                                <input asp-for="pricePerformanceRate" type="radio" class="btn-check" id="btnradio5" autocomplete="off" value=5 required>
                                                                5
                                                            </label>
                                                        </div>
                                                    </div>
                                                    <div class="col-12 mt-3">
                                                        <label><strong>@Resource.odapuan : </strong> </label>
                                                        <div class="btn-group btn-group-toggle float-right" data-toggle="buttons">
                                                            <label class="btn btn-outline-primary" for="btnradio1">
                                                                <input asp-for="roomRate" type="radio" class="btn-check" id="btnradio1" autocomplete="off" value=1 required> 1
                                                            </label>
                                                            <label class="btn btn-outline-primary" for="btnradio2">
                                                                <input asp-for="roomRate" type="radio" class="btn-check" id="btnradio2" autocomplete="off" value=2 required>
                                                                2
                                                            </label>
                                                            <label class="btn btn-outline-primary" for="btnradio3">
                                                                <input asp-for="roomRate" type="radio" class="btn-check" id="btnradio3" autocomplete="off" value=3 required>
                                                                3
                                                            </label>
                                                            <label class="btn btn-outline-primary" for="btnradio4">
                                                                <input asp-for="roomRate" type="radio" class="btn-check" id="btnradio4" autocomplete="off" value=4 required>
                                                                4
                                                            </label>
                                                            <label class="btn btn-outline-primary" for="btnradio5">
                                                                <input asp-for="roomRate" type="radio" class="btn-check" id="btnradio5" autocomplete="off" value=5 required>
                                                                5
                                                            </label>
                                                        </div>
                                                    </div>
                                                    <textarea asp-for="comment" id="comment_@i" class="form-control mt-3" style="min-height:150px"></textarea>
                                                    <button type="submit" class="view_btn btn-block button_hover"><h4 class="sec_h4">@Resource.yorumyap</h4></button>
                                                }
                                            </div>
                                            <div class="col-12">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </article>
                        </div>

                    }
                }
            </div>
        </div>
    </div>
</section>

