@model TezProjesi.CustomModels.HomePageModels
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout_user.cshtml";
}

<!--================Banner Area =================-->
<section class="banner_area">
    <div class="booking_table d_flex align-items-center">
        <div class="overlay bg-parallax" data-stellar-ratio="0.9" data-stellar-vertical-offset="0" data-background=""></div>
        <div class="container">
            <div class="banner_content text-center">
                <h2>EBG Tur</h2>
            </div>
        </div>
    </div>
    <div class="hotel_booking_area position">

        <div class="container">
            <div class="hotel_booking_table">
                <div class="col-md-3">
                    <h2>Otelini<br> Ara</h2>
                </div>
                <div class="col-md-9">
                    <form method="post" asp-controller="User" asp-action="RezervasyonAra">
                        <div class="boking_table">
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="book_tabel_item">
                                        <div class="input-group">
                                            <input type='date' class="form-control"required placeholder="Giriş Tarihi" asp-for="reservation.startdate" />
                                        </div>
                                        <div class="input-group">
                                            <input type='date' class="form-control"required placeholder="Çıkış Tarihi" asp-for="reservation.enddate" />
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="book_tabel_item">
                                        <div class="input-group">
                                            <input type='text' class="form-control"required placeholder="Yetişkin Sayısı" asp-for="reservation.adults" />
                                        </div>
                                        <div class="input-group">
                                            <input type='text' class="form-control" required placeholder="Çocuk Sayısı" asp-for="reservation.children" />
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="book_tabel_item">
                                        <div class="input-group">
                                            <select class="form-control" required asp-for="reservation.HotelID" asp-items="@new SelectList(Model.HotelList, nameof(Hotel.Id), nameof(Hotel.Title))">
                                                <option disabled selected>Seçiniz..</option>
                                            </select>
                                        </div>
                                        <button class="book_now_btn button_hover" type="submit">Ara</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</section>
<!--================Banner Area =================-->
<!--================ Accomodation Area  =================-->
<section class="accomodation_area section_gap">
    <div class="container">
        <div class="section_title text-center">
            <h2 class="title_color">Öne Çıkan Oteller</h2>
        </div>
        <div class="row mb_30">
            @foreach (var Hotel in Model.RandomList)
            {
                <div class="col-lg-3 col-sm-6">
                    <div class="accomodation_item text-center">
                        <div class="hotel_img">
                            @*<img src="image/room1.jpg" alt="">*@
                            @if (Hotel.Image.FirstOrDefault() == null)
                            {

                            }
                            else
                            {
                                <img src="~/HotelImg/@Hotel.Image.FirstOrDefault().HotelImg" style="width:263px; height:270px;" />

                            }

                            <a href="@Url.Action("OtelDetay","User",new { hotelId=Hotel.Id})" class="btn theme_btn button_hover">Detay</a>
                        </div>
                        <a href="@Url.Action("OtelDetay","User",new { hotelId=Hotel.Id})"><h4 class="sec_h4">@Hotel.Title</h4></a>
                        <h6><small>@Hotel.Address</small></h6>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
<!--================ Accomodation Area  =================-->
<!--================ Facilities Area  =================-->
<!--================ Facilities Area  =================-->
<!--================ About History Area  =================-->
<section class="about_history_area section_gap">
    <div class="container">
        <div class="row">
            <div class="col-md-6 d_flex align-items-center">
                <div class="about_content ">
                    <h2 class="title title_color">Hakkımızda</h2>
                    <p>EBG tur çatısı altında hayata geçirdiğimiz alt markalarımız ile konaklama, ulaşım ve acente zincirini kurarak, turizmin tüm gerekliliklerini kapsayan hizmetler sunuyoruz. Otel rezervasyonu ile tüketicinin ihtiyaç ve beklentilerini karşılıyoruz.</p>
                </div>
            </div>
            <div class="col-md-6">
                <img class="img-fluid" src="~/Website/image/about_bg.jpg" alt="img">
            </div>
        </div>
    </div>
</section>
<section class="testimonial_area section_gap">
    <div class="container">
        <div class="section_title text-center">
            <h2 class="title_color">Sizden gelen yorumlar</h2>
        </div>
        <div class="testimonial_slider owl-carousel">
            @foreach (var comment in Model.CommentList)
            {
                <div class="media testimonial_item">
                    <div class="media-body">
                        <a href="#"><h4 class="sec_h4">@comment.User.Name @comment.User.Surname</h4></a>
                        <a href="#"><h4 class="sec_h4">@comment.Hotel.Title</h4></a>
                        <p>@Html.Raw(comment.UserComment)</p>
                        <div class="star">
                            <a href="#"><i class="fa fa-star"></i></a>
                            <a href="#"><i class="fa fa-star"></i></a>
                            <a href="#"><i class="fa fa-star"></i></a>
                            <a href="#"><i class="fa fa-star"></i></a>
                            <a href="#"><i class="fa fa-star-half-o"></i></a>
                        </div>
                    </div>
                </div>
            }


        </div>
    </div>
</section>
