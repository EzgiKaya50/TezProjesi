@model TezProjesi.CustomModels.HotelModels.Payment
@using TezProjesi.Resources
@{
    ViewData["Title"] = "Ödeme Sayfası";
    Layout = "~/Views/Shared/_Layout_user.cshtml";
}

<section class="accomodation_area section_gap">
    <div class="container">
        <div class="section_title text-center">
            <div class="row">
                <div class="col-md-6">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered">
                            <tr>
                                <th>@Resource.otel</th>
                                <th>@Resource.oda</th>
                                <th>@Resource.yetiskin</th>
                                <th>@Resource.cocuk</th>
                                <th>@Resource.tarih</th>
                                <th>@Resource.toplamfiyat</th>
                            </tr>
                            <tr>
                                <td>@Model.hotelName</td>
                                <td>@Model.roomName</td>
                                <td>@Model.adult</td>
                                <td>@Model.children</td>
                                <td>@Model.startDate.ToShortDateString() - @Model.endDate.ToShortDateString()</td>
                                <td>@Model.totalPrice ₺</td>
                            </tr>
                        </table>
                    </div>

                </div>
                <div class="col-md-6">
                    @using (Html.BeginForm("SaveReservation", "User", FormMethod.Post, new { @class = "", @enctype = "multipart/form-data" }))
                    {
                        <input type="hidden" asp-for="hotelID" />
                        <input type="hidden" asp-for="roomID" />
                        <input type="hidden" asp-for="adult" />
                        <input type="hidden" asp-for="children" />
                        <input type="hidden" asp-for="startDate" />
                        <input type="hidden" asp-for="endDate" />
                        <label for="">@Resource.kartınuzerindekiad</label>
                        <input type="text" asp-for="cardNameSurname" class="form-control mb-2" placeholder="@Resource.kartınuzerindekiad" />
                        <label for="">@Resource.kartnumarası</label>
                        <input type="tel" asp-for="cardNo" class="form-control mb-2" placeholder="@Resource.kartnumarası" maxlength="18" />

                        <div class="row mb-2">
                            <div class="col-md-4">
                                <label for="">@Resource.ay</label>
                                <input type="tel" asp-for="cardMonth" class="form-control" maxlength="2" placeholder="@Resource.ay" />
                            </div>
                            <div class="col-md-4">
                                <label for="">@Resource.yıl</label>
                                <input type="tel" asp-for="cardYear" class="form-control" maxlength="2" placeholder="@Resource.yıl" />
                            </div>
                            <div class="col-md-4">
                                <label for="">CVV2</label>
                                <input type="tel" asp-for="cvv" class="form-control" maxlength="3" placeholder="CVV2" />
                            </div>

                        </div>
                        <button class="book_now_btn button_hover mt-3" type="submit">@Resource.odemeyap</button>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
