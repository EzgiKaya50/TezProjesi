@model TezProjesi.CustomModels.HomePageModels
@using TezProjesi.Resources

@{
    ViewData["Title"] = "Oda Ara";
    Layout = "~/Views/Shared/_Layout_user.cshtml";
}

<section class="accomodation_area section_gap">
    <div class="container">
        <div class="section_title">
            <div class="container">
                @{
                    int daydiff = (int)(Model.reservation.enddate - Model.reservation.startdate).TotalDays + 1;
                }

                <div class="col-12 mb-2">
                    <div class="row">
                        <div class="col-12">
                            <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                                <div class="carousel-inner" style="height:500px;">
                                    @{int index = 0; }
                                    @foreach (var img in Model.hotelInfo.Image)
                                    {
                                        @if (index == 0)
                                        {
                                            <div class="carousel-item active ">
                                                <img src="~/HotelImg/@img.HotelImg" class="w-100" style="height:500px;" alt="...">
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="carousel-item">
                                                <img src="~/HotelImg/@img.HotelImg" class="w-100" style="height:500px;" alt="...">
                                            </div>
                                        }
                                        index++;
                                    }


                                </div>
                                <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Previous</span>
                                </a>
                                <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Next</span>
                                </a>
                            </div>
                        </div>
                        <div class="col-12 mt-3 text-center">
                            <h4>@Resource.otel : @Model.hotelInfo.Title</h4>
                            <h5>@Resource.tarih : @Model.reservation.startdate.ToShortDateString() - @Model.reservation.enddate.ToShortDateString()</h5>
                        </div>
                    </div>
                    <div class="card shadow mb-5 rounded">
                        <nav>
                            <div class="nav nav-tabs" id="nav-tab" role="tablist">
                                <button class="nav-link active" id="nav-home-tab" data-toggle="tab" data-target="#nav-home" type="button" role="tab" aria-controls="nav-home" aria-selected="true">@Resource.oda</button>
                                <button class="nav-link" id="nav-profile-tab" data-toggle="tab" data-target="#nav-profile" type="button" role="tab" aria-controls="nav-profile" aria-selected="false">@Resource.detay</button>
                                <button class="nav-link" id="nav-contact-tab" data-toggle="tab" data-target="#nav-contact" type="button" role="tab" aria-controls="nav-contact" aria-selected="false">@Resource.yorum</button>
                            </div>
                        </nav>
                        <div class="tab-content p-3" id="nav-tabContent">
                            <div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">
                                @foreach (var Room in Model.RoomList.Where(c => c.Status == true))
                                {
                                    <div class="col-12 mb-5">
                                        <div class="row">
                                            <div class="col-6">

                                                <img src="~/RoomImg/@Room.RoomImages.FirstOrDefault().RoomImg" class="d-block w-100" alt="...">

                                            </div>
                                            <div class="col-6">
                                                <h4>@Resource.oda : @Room.Title</h4>
                                                <h5>@Resource.yetiskin : @Room.Adult</h5>
                                                <h5>@Resource.cocuk : @Room.Children</h5>
                                                <h5>@Resource.gecelikfiyat : @Room.Price ₺</h5>
                                                <h5>@Resource.toplamfiyat : @(Room.Price*daydiff) ₺</h5>
                                                <a class="book_now_btn button_hover" href="@Url.Action("OdemeSayfasi","User", new {startDate = Model.reservation.startdate,endDate= Model.reservation.enddate,children= Model.reservation.children,adults= Model.reservation.adults,hotelID= Model.reservation.HotelID, roomID = Room.Id })">@Resource.rezervasyonyap</a>

                                            </div>
                                        </div>
                                    </div>

                                }
                            </div>
                            <div class="tab-pane fade" id="nav-profile" role="tabpanel" aria-labelledby="nav-profile-tab">
                                <p>@Html.Raw(Model.hotelInfo.Description)</p>
                            </div>
                            <div class="tab-pane fade" id="nav-contact" role="tabpanel" aria-labelledby="nav-contact-tab">

                                <div class="mb-5">
                                    <div class="row">
                                        <div class="d-flex align-items-center justify-content-center text-white text-center" style="background-color: #f8b600; height: 150px; width: 150px; font-size: 2.5rem; font-weight: 800 ">
                                            @String.Format("{0:0.##}", (((Model.hotelInfo.Comments.Sum(c => c.RoomRate) / Model.hotelInfo.Comments.Count) + (Model.hotelInfo.Comments.Sum(c => c.PricePerformanceRate) / Model.hotelInfo.Comments.Count) + (Model.hotelInfo.Comments.Sum(c => c.LocationRate) / Model.hotelInfo.Comments.Count) + (Model.hotelInfo.Comments.Sum(c => c.ServiceRate) / Model.hotelInfo.Comments.Count) + (Model.hotelInfo.Comments.Sum(c => c.FoodRate) / Model.hotelInfo.Comments.Count) + (Model.hotelInfo.Comments.Sum(c => c.GeneralRate) / Model.hotelInfo.Comments.Count)) / 6))
                                        </div>
                                        <div class="d-flex justify-content-between align-items-center ml-2">
                                            <b>@Resource.odapuan: </b><span class="mr-4">@(Model.hotelInfo.Comments.Sum(c => c.RoomRate) / Model.hotelInfo.Comments.Count)</span>
                                            <b>@Resource.fiyatpuan: </b><span class="mr-4">@(Model.hotelInfo.Comments.Sum(c => c.PricePerformanceRate) / Model.hotelInfo.Comments.Count)</span>
                                            <b>@Resource.konumpuan: </b><span class="mr-4">@(Model.hotelInfo.Comments.Sum(c => c.LocationRate) / Model.hotelInfo.Comments.Count)</span>
                                            <b>@Resource.servispuan: </b><span class="mr-4">@(Model.hotelInfo.Comments.Sum(c => c.ServiceRate) / Model.hotelInfo.Comments.Count)</span>
                                            <b>@Resource.yemekpuan: </b><span class="mr-4">@(Model.hotelInfo.Comments.Sum(c => c.FoodRate) / Model.hotelInfo.Comments.Count)</span>
                                            <b>@Resource.genelpuan: </b><span class="mr-4">@(Model.hotelInfo.Comments.Sum(c => c.GeneralRate) / Model.hotelInfo.Comments.Count)</span>
                                        </div>
                                    </div>


                                </div>

                                @foreach (var comment in Model.hotelInfo.Comments)
                                {
                                    <div class="card mb-3">
                                        <div class="card-header">
                                            <span>@comment.User.Name @comment.User.Surname</span>
                                            <span class="float-right">
                                                <b>@Resource.odapuan: </b><span class="mr-2">@comment.RoomRate</span>
                                                <b>@Resource.fiyatpuan: </b><span class="mr-2">@comment.PricePerformanceRate</span>
                                                <b>@Resource.konumpuan: </b><span class="mr-2">@comment.LocationRate</span>
                                                <b>@Resource.servispuan: </b><span class="mr-2">@comment.ServiceRate</span>
                                                <b>@Resource.yemekpuan: </b><span class="mr-2">@comment.FoodRate</span>
                                                <b>@Resource.genelpuan: </b><span class="mr-2">@comment.GeneralRate</span>
                                            </span>
                                        </div>
                                        <div class="card-body">
                                            <p>@Html.Raw(comment.UserComment)</p>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>